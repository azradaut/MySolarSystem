<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySolarSystem.Pages.QuestionPage">
    <StackLayout Padding="20">
        <Image x:Name="QuestionImage" HeightRequest="200" Aspect="AspectFit" />
        <Label x:Name="QuestionTextLabel" FontSize="20" TextColor="Black" Margin="0,20,0,10" />
        <ListView x:Name="AnswerChoicesListView" SelectionMode="Single" ItemSelected="AnswerChoicesListView_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding}" FontSize="18" TextColor="Black" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="NextButton" Text="Next" Clicked="NextButton_Clicked" HorizontalOptions="End" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
