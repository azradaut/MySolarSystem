<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySolarSystem.Pages.SpecificLesson"
             Title="SpecificLesson">
    <VerticalStackLayout>


        <Image x:Name="lessonImage"
               Aspect="AspectFit"
               HorizontalOptions="Center"
               Margin="30"/>
        
            <Label x:Name="lessonHeading"
                   Margin="10"
                   FontSize="Large"/>
        <Label x:Name="lessonparagraph1"
                   Margin="10"
                   FontSize="Large"/>
        <Label x:Name="lessonparagraph2"
                   Margin="10"
                   FontSize="Medium"/>

        <Label x:Name="lessonparagraph3"
                   Margin="10"
                   FontSize="Medium"/>



    </VerticalStackLayout>
</ContentPage>