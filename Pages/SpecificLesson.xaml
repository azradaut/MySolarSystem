<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySolarSystem.Pages.SpecificLesson"
             Title="SpecificLesson">

    <ScrollView>
        <VerticalStackLayout>

            <Image x:Name="lessonImage"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   Margin="20"/>

            <Label x:Name="lessonHeading"
                   Margin="20"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            
            <Label x:Name="lessonparagraph"
                   Margin="20"
                   HorizontalTextAlignment="Start"
                   FontSize="Medium"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>