<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MySolarSystem.Pages"
             mc:Ignorable="d"
             x:Class="MySolarSystem.Pages.Telescope">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image x:Name="nasaImage" Aspect="AspectFill" HeightRequest="300" WidthRequest="350" />
            <Label x:Name="explanationLabel" HorizontalTextAlignment="Center" Margin="25" />
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
