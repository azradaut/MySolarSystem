<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySolarSystem.Pages.Lessons"
             Title="Lessons">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Select a lesson" 
                FontSize="Large"
            HorizontalOptions="Center"
                Margin="5,5,5,30"/>

            <Button
            x:Name="btnSolarSystem"
            Text="SolarSystem"/>

            <Button
            x:Name="btnMercury"
            Text="Mercury"/>

            <Button
            x:Name="btnVenus"
            Text="Venus"/>

            <Button
            x:Name="btnEarth"
            Text="Earth"/>

            <Button
            x:Name="btnMars"
            Text="Mars"/>

            <Button
            x:Name="btnJupiter"
            Text="Jupiter"/>

            <Button
            x:Name="btnSaturn"
            Text="Saturn"/>

            <Button
            x:Name="btnUranus"
            Text="Uranus"/>

            <Button
            x:Name="btnNeptune"
            Text="Neptune"/>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>