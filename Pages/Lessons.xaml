<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySolarSystem.Pages.Lessons"
             Title="Lessons">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Select a lesson" 
            HorizontalOptions="Center"
                Margin="5,5,5,30"/>

            <Button
            x:Name="btnSolarSystem"
            Text="SolarSystem"/>

            <Button
            x:Name="btnMercury"
            Text="Mercury"/>

            <Button
            x:Name="btnVenus"
            Text="Venus"/>

            <Button
            x:Name="btnMars"
            Text="Mars"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>