<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySolarSystem.Pages.Quiz"
             Title="Quiz">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="Test your space smarts with 5 questions!"
                Margin="30"
                FontSize="Large"
                FontAttributes="Bold"
                VerticalOptions="Center" 
                HorizontalTextAlignment="Center"
                SemanticProperties.HeadingLevel="Level1"/>

            <Label 
                Margin="0, 50, 0, 0"
                Text="Just pick the correct answer"
                FontSize="Large"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"/>

            <Label 
                Margin="30"
                FontSize="Large"
                Text="Good luck, space explorer!"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level3"/>

            <Button
                x:Name="btnStartQuiz"
                Margin="20, 70, 20, 10"
                Text="Start"
                SemanticProperties.Hint="Click to start the quiz"/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>