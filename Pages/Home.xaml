<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MySolarSystem.Pages.Home"
             Title="Home">
    
        <VerticalStackLayout>
            <Label 
                Margin="20"
                Text="MY SOLAR SYSTEM"
                HorizontalTextAlignment="Center"               
                FontSize="48"
                FontAttributes="Bold"
                VerticalOptions="CenterAndExpand"
                SemanticProperties.HeadingLevel="Level1"
             />

            <Image
                Source="astronaut.svg"
                SemanticProperties.Description="Meet our adorable illustrated astronaut in a charming white spacesuit and helmet, happily holding three orange balloons,
                eager to lead young explorers on captivating adventures through the enchanting solar system."/>

        </VerticalStackLayout>

</ContentPage>